{
  "permissions": {
    "allow": [
      "Bash(npx next build:*)",
      "Bash(npx vitest run*)",
      "Bash(npx jest*)",
      "Bash(npx tsc --noEmit*)",
      "Bash(yarn lint*)",
      "Bash(npx next lint*)"
    ]
  },
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Edit|Write",
        "hooks": [
          {
            "type": "command",
            "command": "bash \"$CLAUDE_PROJECT_DIR/.claude/hooks/post-edit.sh\"",
            "timeout": 60
          }
        ]
      }
    ]
  }
}
